#!/bin/bash

build () {
    local mod=$1
    if [ -z "$mod" ]; then
        echo module name required
    fi
    docker build --no-cache $mod -t greentranslator/green-$mod
}
push () {
    local mod=$1
    if [ -z "$mod" ]; then
        echo module name required
    fi
    docker push greentranslator/green-$mod
}
clean () {
    images () {
        for i in $(sudo docker images | awk '{ print $3 }' | grep -vi image); do echo $i; sudo docker rmi -f $i; done
    }
    $*
}
all () {
    build base
    push base
    build onto
    push onto
    build bionames
    push bionames
}

all_bionames () {
    build base
    push base
    build bionames
    push bionames
}

all_onto () {
    build base
    push base
    build onto
    push onto
}

all_uberonto () {
    build base
    push base
    build uberonto
    push uberonto
}

kill () {
    local mod=$1
    if [ -z "$mod" ]; then
        echo module name required
    fi
    docker kill -s 9 $mod
}
shell () {
        local mod=$1
    if [ -z "$mod" ]; then
        echo module name required
    fi
    docker exec -it $mod bash
}
onto () {
    set -x
    local_dir=$1
    docker run \
           --env GIT_PULL=true \
           --name ont \
           --rm \
           --publish=5001:5353 \
           -v ${local_dir}:/data greentranslator/green-onto
    set +x
}
uberonto () {
    set -x
    local_dir=$1
    docker run \
           --env GIT_PULL=true \
           --name ont \
           --rm \
           --publish=5001:5355 \
           -v ${local_dir}:/data greentranslator/green-uberonto
    set +x
}
bionames () {
    set -x
    local_dir=$1
    docker run \
           --env GIT_PULL=true \
           --name bio \
           --rm \
           --publish=5001:5354 \
           -v ${local_dir}:/data greentranslator/green-bionames
    set +x
}


$*
